<% let objPath = path;
if (objPath.substr(objPath.length - 1) == '/') objPath += object.basename;
else objPath += '/' + object.basename;
%>
<div class="c-object-box">
  <a href="/files<%= objPath %>">
    <div class="c-object-box__icon">
      <% if (object.type == 'dir') { %>
        <span class="material-icons">folder</span>
      <% } else if (object.type == '..') { %>
        <span class="material-icons">arrow_back</span>
      <% } else { %>
        <span class="material-icons">description</span>
      <% } %>
    </div>
    <span class="c-object-box__filename">
      <% if (object.basename.length > 32) { %>
        <%= object.basename.substring(0, 32) + '...' %>
      <% } else { %>
        <%= object.basename %>
      <% } %>
    </span>
    <% if (object.type == 'file') { %>
      <span class="c-object-box__size"><%= object.humanSize %></span>
    <% } %>
  </a>
</div>
